<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalExpenses.Views.AddIncomePage">
    <ContentPage.Content>
        <StackLayout>
            <Picker x:Name="teHyratPicker" Title="Zgjidh te hyren">
                <Picker.Items>
                    <x:String>Rroga</x:String>
                    <x:String>Qiraja</x:String>                    
                </Picker.Items>                
            </Picker>
            <Entry x:Name="shumaEntry" Keyboard="Numeric" Placeholder="Shkruani shumen e te hyres"/>
            <Button x:Name="ShtoHyjre" Clicked="ShtoHyjre_Clicked" Text="Shto te hyre"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>