<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalExpenses.Views.AddExpensePage">
    <ContentPage.Content>
        <StackLayout>
            <Picker x:Name="shpenzimetPicker" Title="Zgjidh Shpenzimin">
                <Picker.Items>
                    <x:String>Rryme</x:String>
                    <x:String>Uje</x:String>
                </Picker.Items>
            </Picker>
            <Entry x:Name="shpenzimiEntry" Keyboard="Numeric" Placeholder="Shkruani vleren e shpenzimit"/>
            <Button x:Name="ShtoShpenzim" Clicked="ShtoShpenzim_Clicked" Text="Shto Shpenzim"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>