<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalExpenses.Views.HomePage"
             Title="Ballina">
    <ContentPage.Content>
        <StackLayout>
            <Button HorizontalOptions="CenterAndExpand" x:Name="Logoutbtn" Text="Log Out" Clicked="Logoutbtn_Clicked" Margin="25,50,25,25" CornerRadius="8"/>
            <Button HorizontalOptions="CenterAndExpand" x:Name="GoToAddIncome" Text="Shtoni te hyra" Margin="25,50,25,25" Clicked="GoToAddIncome_Clicked" CornerRadius="8"/>
            <Button HorizontalOptions="CenterAndExpand" x:Name="GoToAddExpense" Text="Shtoni shpenzime" Clicked="GoToAddExpense_Clicked" Margin="25,50,25,25" CornerRadius="8"/>
            <Button HorizontalOptions="CenterAndExpand" x:Name="ShowIncomes" Clicked="ShowIncomes_Clicked" Text="Shfaqni te hyrat" Margin="25,50,25,25" CornerRadius="8"/>
            <Button HorizontalOptions="CenterAndExpand" x:Name="ShowShpenzimet" Clicked="ShowShpenzimet_Clicked" Text="Shfaqni shpenzimet" Margin="25,50,25,25" CornerRadius="8"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>